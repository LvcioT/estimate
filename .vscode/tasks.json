{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "go build -v .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "go run .",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "go test -v ./...",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}